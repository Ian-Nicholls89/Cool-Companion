# Bring Shopping List API Credentials
BRING_EMAIL=your_email@example.com
BRING_PASSWORD=your_secure_password

# Camera Configuration
CAMERA_INDEX=0
# Raspberry Pi: Use lower resolution for better performance (320x240 or 640x480)
# Desktop: Higher resolution works fine (640x480 or 1280x720)
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
CAMERA_FPS=30

# Database Configuration
DATABASE_PATH=fridge.db

# API Configuration
API_TIMEOUT=5
API_VERIFY_SSL=true

# Window Configuration
WINDOW_WIDTH=400
WINDOW_HEIGHT=700
# Raspberry Pi: Recommended to use fullscreen for better performance
WINDOW_FULLSCREEN=false

# Raspberry Pi Performance Settings
# Enable hardware acceleration (disable if you encounter GL context errors)
ENABLE_HARDWARE_ACCELERATION=true
# Force software rendering (enable if GL context errors persist)
FLET_FORCE_SOFTWARE_RENDERING=false
# Reduce animations for better performance on Raspberry Pi
REDUCE_ANIMATIONS=false

# Environment
ENVIRONMENT=development
